{% extends 'HarvestCloudMarketPlaceBuyerBundle::layout.html.twig' %}

{% block content %}
    <h1>Invoices</h1>

    <table>
        <thead>
            <tr>
                <th>Date</th>
                <th>Number</th>
                <th>Order</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            {% for invoice in invoices %}
                <tr>
                  <td>{{ invoice.postedAt|date('Y-m-d') }}</td>
                  <td><a href="{{ path('Buyer_invoice_show', { 'id': invoice.id }) }}">Invoice #{{ invoice.id }}</a></td>
                  <td>{{ invoice.order.number }}</td>
                  <td>${{ invoice.amount|number_format(2) }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
