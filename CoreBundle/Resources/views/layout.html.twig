<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %}Harvest Cloud{% endblock %}</title>
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
        <link href="{{ asset('bundles/marketplacecore/css/styles.css') }}" type="text/css" rel="stylesheet" />
        <link href="{{ asset('bundles/marketplacecore/css/layout.css') }}" type="text/css" rel="stylesheet" />
        <link href="{{ asset('bundles/marketplacecore/css/colors.css') }}" type="text/css" rel="stylesheet" />
        <link href="{{ asset('bundles/marketplacecore/css/tiles.css') }}" type="text/css" rel="stylesheet" />

        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        {% block map_js %}
        {% endblock %}

    </head>
    <body class="{% block body_class %}{% endblock %}">
        <div id="page">
            <div class="logo_and_main_nav">
                <div class="main_logo">
                    <strong><a href="{{ path('_welcome') }}"><img src="{{ asset('bundles/marketplacecore/images/header_logo.png') }}" alt="Harvest Cloud" title="Harvest Cloud" /></a></strong>
                </div><!-- .main_logo -->
                {% if is_granted("IS_AUTHENTICATED_FULLY") %}
                    <div class="main nav">
                        <a class="buy" href="{{ path('Buyer_homepage') }}">Buy</a>
                        <a class="sell" href="{{ path('Seller_homepage') }}">Sell</a>
                        <a class="hub" href="{{ path('Hub_homepage') }}">Hub</a>
                        <a class="settings" href="{{ path('_welcome') }}" class="settings"><img src="{{ asset('bundles/marketplacecore/images/settings_icon.png') }}" alt="Settings" title="Settings" /></a>
                        <a class="cart" href="{{ path('Buyer_cart_show') }}" class="cart"><span class="hide_sub_tablet_portrait">Cart: </span>{% render "HarvestCloudMarketPlaceBuyerBundle:Cart:sub_total" %}</a>
                        <span class="clear"></span>
                    </div><!--.main.nav -->
                {% endif %}
            </div><!-- .logo_and_main_nav -->
            {% block subnav %}
            {% endblock %}

            <div id="content">
                {% block content %}
                {% endblock %}
            </div><!-- #content -->

            <div id="footer">
                {% if is_granted("IS_AUTHENTICATED_FULLY") %}
                    <ul id="mainNav">
                        <li class="buy">
                            <span><a class="level one" href="{{ path('Buyer_homepage') }}">Buy</a></span>
                            <ul>
                                <li><a href="{{ path('Buyer_homepage') }}">Products</a></li>
                                <li><a href="{{ path('Buyer_hub_nearby') }}">Nearby Hubs</a></li>
                                <li><a href="{{ path('Buyer_order') }}">Orders</a></li>
                            </ul>
                        </li><!-- .buy -->
                        <li class="sell">
                            <span><a class="level one" href="{{ path('Seller_homepage') }}">Sell</a></span>
                            {% if app.user.currentProfile.hasActiveSellerStatus %}
                                <ul>
                                    <li><a href="{{ path('Seller_product') }}">Products</a></li>
                                    <li><a href="{{ path('Seller_seller_window') }}">Seller Windows</a></li>
                                    <li><a href="{{ path('Seller_window_maker') }}">Recurring Seller Windows</a></li>
                                    <li><a href="{{ path('Seller_hub_nearby') }}">Nearby Hubs</a></li>
                                    <li><a href="{{ path('Seller_order') }}">Orders</a></li>
                                </ul>
                            {% endif %}
                        </li><!-- .sell -->
                        <li class="hub">
                            <span><a class="level one" href="{{ path('Hub_homepage') }}">Hub</a></span>
                            {% if app.user.currentProfile.hasActiveHubStatus %}
                                <ul>
                                    <li><a href="{{ path('Hub_order') }}">Open orders</a></li>
                                    <li><a href="{{ path('Hub_window_maker') }}">Recurring Hub Windows</a></li>
                                </ul>
                            {% endif %}
                        </li><!-- .hub -->
                        <li class="cart">
                            <span><a class="cart" href="{{ path('Buyer_cart_show') }}" class="cart"><span class="hide_sub_tablet_portrait">Cart: </span>{% render "HarvestCloudMarketPlaceBuyerBundle:Cart:sub_total" %}</a></span>
                        </li><!-- .cart -->
                        <li class="context">
                            <span><a class="level one" href="{{ path('Buyer_homepage') }}">Context</a></span>
                            <ul>
                                <li><a href="{{ path('fos_user_change_password') }}">Change password</a></li>
                                <li><a href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a></li>
                                <li><a href="{{ path('Admin_homepage') }}">Admin</a></li>
                            </ul>
                        </li><!-- .context -->
                    </ul><!-- #mainNav -->
                {% endif %}
            </div><!-- #footer -->
        </div><!-- #page -->
    </body>
</html>
