<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %}Harvest Cloud{% endblock %}</title>
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
        <link href="{{ asset('bundles/marketplacecore/css/layout.css') }}" type="text/css" rel="stylesheet" />
        <link href="{{ asset('bundles/marketplacecore/css/styles.css') }}" type="text/css" rel="stylesheet" />
        <link href="{{ asset('bundles/marketplacecore/css/colors.css') }}" type="text/css" rel="stylesheet" />

        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        {% block map_js %}
        {% endblock %}

    </head>
    <body class="{% block body_class %}{% endblock %}">
        <div id="page">
            <div class="logo_and_main_nav">
                <div class="main_logo">
                    <strong><a href="{{ path('_welcome') }}"><img src="{{ asset('bundles/marketplacecore/images/header_logo.png') }}" alt="Harvest Cloud" title="Harvest Cloud" /></a></strong>
                </div><!-- .main_logo -->
                {% if is_granted("IS_AUTHENTICATED_FULLY") %}
                    <div class="main nav">
                        <a class="buy" href="{{ path('Buyer_homepage') }}">Buy</a>
                        <a class="sell" href="{{ path('Seller_homepage') }}">Sell</a>
                        <a class="hub" href="{{ path('Hub_homepage') }}">Hub</a>
                        <a class="settings" href="{{ path('_welcome') }}" class="settings"><img src="{{ asset('bundles/marketplacecore/images/settings_icon.png') }}" alt="Settings" title="Settings" /></a>
                        <a class="cart" href="{{ path('Buyer_cart_show') }}" class="cart"><img src="{{ asset('bundles/marketplacecore/images/settings_icon.png') }}" alt="Cart" title="Cart" /></a>
                        <span class="clear"></span>
                    </div><!--.main.nav -->
                {% endif %}
            </div><!-- .logo_and_main_nav -->
            {% block subnav %}
            {% endblock %}

            <div id="content">
                {% block content %}
                {% endblock %}
            </div><!-- #content -->

            <div id="footer">
                <p>
                    {% if is_granted("IS_AUTHENTICATED_FULLY") %}
                        {{ 'layout.logged_in_as'|trans({'%username%': app.user.fullname}, 'FOSUserBundle') }} |
                        <a href="{{ path('fos_user_change_password') }}">Change password</a>
                        |
                        <a href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a>
                        |
                        <a href="{{ path('Admin_homepage') }}">Admin</a>
                    {% endif %}
                </p>
            </div><!-- #footer -->
        </div><!-- #page -->
    </body>
</html>
