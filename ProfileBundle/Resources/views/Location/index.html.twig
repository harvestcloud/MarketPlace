{% extends 'HarvestCloudMarketPlaceProfileBundle::layout.html.twig' %}

{% block content %}
    <h1>Locations</h1>
    <table>
        <tbody>
            {% for location in locations %}
                <tr>
                    <td>{{ location.id }}</td>
                    <td>{{ location.name }}</td>
                    <td>
                      {{ location.addressLine1 }}
                      {{ location.addressLine2 }}
                      {{ location.addressLine3 }}
                    </td>
                    <td>{{ location.town }}</td>
                    <td>{{ location.stateCode }}</td>
                    <td>{{ location.postalCode }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
